@model IEnumerable<CFPortfolio.Models.codeFirst.BlogPost>

@{
    ViewBag.Title = "Blog";
   
}

<link href="~/css/blog.css" rel="stylesheet" />

<section id="blog" style="background-image: url(images/blog/snailSlimline.jpg)">
    <div class="container">
        <div class="row text-center clearfix">
            <div class="col-sm-8 col-sm-offset-2">
                <h2 class="title-one">Blog</h2>
                <p class="blog-heading">The world turns softly.  The sun greets us each time.  On our relentless pursuit.  Of our next lap.  </p>
                <h4> Record Your Latest Millimoment </h4>
            </div>
        </div>
        
        <div class="row">
            <div class="col-sm-3" style="background-image: url('../../images/blog/snailSlimline.jpg'); background-size: cover; height:700px; width: 290px;">
               
            </div>
            <div class="col-sm-6" style="text-indent: 10px;">
                <div class="form-group">
                    <label for="title">Title:</label>
                    <textarea class="form-control" rows="2" id="title"></textarea>
                </div>
                <div class="form-group">
                    <label for="slug">Slug:</label>
                    <textarea class="form-control" rows="1" id="slug"></textarea>
                </div>
                <div class="form-group">
                    <label for="body">Body:</label>
                    <textarea class="form-control textarea" rows="25" id="body" ></textarea>
                </div>
                <button type="button" class="btn btn-danger btn-lg" id="myBtn">Submit</button>
            </div>
            <div class="col-sm-3" style="background-image: url('../../images/blog/treeRings.jpg'); background-size: cover; height:700px; width: 290px;">
                <h4> Previous Posts</h4>
                @foreach(var item in Model)
                  {
                    <ul>
                        <li>@Html.DisplayFor(modelItem => item.Title)</li>
                    </ul>
                    }
            </div>
        </div>
    </div>
</section> <!--/#blog-->


