@model PortfolioV4.Models.codeFirst.Comment



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    
    <div class="jumbotron loginComment">
        <h1 class="commentText">Share the Love</h1>
    </div>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        <input type="hidden" name="PostId" value="@ViewBag.PostId">
        <div class="form-horizontal">
            <h4>Comment</h4>
            <hr />
           
               
            <div class="form-group">
                @Html.LabelFor(model => model.Body, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextAreaFor(model=>model.Body, 10, 125,new {htmlAttributes = new { @class = "form-control" } })
                    @*Html.EditorFor(model => model.Body, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.ValidationMessageFor(model => model.Body, "", new { @class = "text-danger" })
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default buttonColor" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
